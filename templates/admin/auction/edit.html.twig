{% extends 'admin/auction/show.html.twig' %}

{% block tochange %}
 <div class="content-body">
    <div class="add-auction-admin-container">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <h2>Edit Auction</h2>
                
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <div class="form-group mb-3">
                    {{ form_label(form.label, 'Auction Label', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.label, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.label) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.startDate, 'Start Date', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.startDate, {'attr': {'class': 'form-control datetimepicker'}}) }}
                    {{ form_errors(form.startDate) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.endDate, 'End Date', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.endDate, {'attr': {'class': 'form-control datetimepicker'}}) }}
                    {{ form_errors(form.endDate) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.startPrice, 'Starting Price', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.startPrice, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.startPrice) }}
                </div>

                <div class="form-group mb-3">
                    {{ form_label(form.artwork, 'Artwork', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.artwork, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.artwork) }}
                </div>

                <div class="form-group mb-3 text-center">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
